<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-service" author="fiware">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="service"/>
            </not>
        </preConditions>
        <createTable tableName="service">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="002-create-credential" author="fiware">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="credential"/>
            </not>
        </preConditions>
        <createTable tableName="credential">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="credential_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="service_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="credential"
                baseColumnNames="service_id"
                constraintName="fk_service"
                referencedTableName="service"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="003-create-endpoint-entry" author="fiware">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="endpoint_entry"/>
            </not>
        </preConditions>
        <createTable tableName="endpoint_entry">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="endpoint" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="credential_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="endpoint_entry"
                baseColumnNames="credential_id"
                constraintName="fk_credential"
                referencedTableName="credential"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="100-tag-db" author="fiware">
        <tagDatabase tag="v0.0.1"/>
    </changeSet>

</databaseChangeLog>
